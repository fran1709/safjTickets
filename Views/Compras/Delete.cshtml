@model devTicket.Models.Compra

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Compra</h1>

<h3>¿Está seguro que desea eliminar la compra?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Cantidad</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            <p>Fecha de Reserva</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaReserva)
        </dd>
        <dt class = "col-sm-2">
            <p>Fecha de pago</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPago)
        </dd>
        <dt class = "col-sm-2">
            <p>Creado el</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            <p>Creado por</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt class = "col-sm-2">
            <p>Actualizado el</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class = "col-sm-2">
            <p>Actualizado por</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedBy)
        </dd>
        <dt class = "col-sm-2">
            <p>Activo</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class = "col-sm-2">
            <p>ID de Cliente</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.Id)
        </dd>
        <dt class = "col-sm-2">
            <p>ID de Entrada</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEntradaNavigation.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-reply" cla></i></a> |
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        
    </form>
</div>

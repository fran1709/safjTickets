@model IEnumerable<devTicket.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus"></i></a>
</p>
<table class="table" id="compraTable">
    <thead>
        <tr>
            <th>
                <p>Cantidad</p>
            </th>
            <th>
                <p>Fecha de Reserva</p>
            </th>
            <th>
                <p>Fecha de Pago</p>
            </th>

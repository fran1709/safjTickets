@model IEnumerable<devTicket.Models.Evento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus"></i></a>
</p>
<table class="table" id="eventoTable">
    <thead>
        <tr>
            <th>
                <p>Disponible</p>
            </th>
            <th>
                <p>Descripcion</p>
            </th>
            <th>
                <p>Fecha</p>
            </th>
            <th>
                <p>Creado el</p>
            </th>
            <!--<th>
                <p>Creado por</p>
            </th>
            <th>
                <p>Actualizado el</p>
            </th>
            <th>
                <p>Actualizado por</p>
            </th> -->
            <th>
                <p>Activo</p>
            </th>
            <th>
                <p>ID de Escenario</p>
            </th>
            <th>
                <p>ID de Tipo Evento</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <!--<td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td> -->
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEscenarioNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoEventoNavigation.Id)
            </td>
            <td>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-list"></i></a> |
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil"></i></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#eventoTable').DataTable();
        });
    </script>
}

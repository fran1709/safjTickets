@model devTicket.Models.TipoEscenario

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Tipo Escenario</h1>

<h3>¿Está seguro que desea eliminar este tipo de escenario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Descripcion</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            <p>Creado el</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            <p>Creado por</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt class = "col-sm-2">
           <p>Actualizado el</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class = "col-sm-2">
            <p>Actualizado por</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedBy)
        </dd>
        <dt class = "col-sm-2">
            <p>Activo</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class = "col-sm-2">
            <p>ID de Escenario</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEscenarioNavigation.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-reply" cla></i></a> |
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
